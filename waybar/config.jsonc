{
		// "reload_style_on_change": true, // debug purpose
		"layer": "top",
		"spacing": 4,
		"exclusive": true,
		"margin-top": 5,
		"margin-left": 7,
		"margin-right": 7,
		"modules-left": [
			"niri/workspaces",
			"custom/sep",
	    	"disk",
	    	"cpu",
	    	"memory",
			"custom/sep",
			"niri/window"
	   
		],
		"modules-right": [
			"group/info",
			"custom/sep",
			"mpris",
			"network",
			"backlight",
			"wireplumber",
			"battery",
			"custom/sep",
			"clock"
			//"group/power"
			
		],
		"niri/workspaces": {
			"format": "{icon}",
			"format-icons": {
				 "default": "ÔÑë",
				 "active": "ÔÜí",
			},
			"persistent-workspaces": {
				"*": 5,
			}
		},
	    "group/info": {
	      "orientation": "inherit",

	      "modules": ["tray", "custom/notifications"]
	    },
	
	    "custom/notifications": {
	      "tooltip": false,
	      // I don't know why "{icon} {}" doesn't work
	      "format": "{icon}",
	      "format-icons": {
	        "notification": "Û±Ö´",
	        "none": "Û∞Çö",
	        "dnd-notification": "Û∞Çõ",
	        "dnd-none": "Û∞Çõ",
	        "inhibited-notification": "Û∞Çö",
	        "inhibited-none": "Û∞Çö",
	        "dnd-inhibited-notification": "Û∞Çõ",
	        "dnd-inhibited-none": "Û∞Çõ"
	      },
	      "return-type": "json",
	      "exec-if": "which swaync-client",
	      "exec": "swaync-client -swb",
	      "on-click": "swaync-client -t -sw",
	      "on-click-right": "swaync-client -d -sw",
	      "escape": true
	    },
	  "disk": {
	    "interval": 30,
	    "format": "ÔÇ† {percentage_free}%"
	  },
	  "memory": {
	    "format": "ÓøÖ {percentage}%"
	  },
	  "cpu": {
	    "format": "Ôãõ  {usage}%"
	  },
	
		"clock": {
			"interval": 1,
			"format": "{:%A, %B %d   %H:%M:%S}",
			"format-alt": "{:%d/%m/%y %I:%M:%S %p}",
			"tooltip-format": "<tt><small>{calendar}</small></tt>",
			"calendar": {
	            "mode"          : "month",
	            "mode-mon-col"  : 3,
	            "weeks-pos"     : "right",
	            "on-scroll"     : 1,
	            "format": {
					"months":     "<span color='#DCD7BA'><b>{}</b></span>",
	                "days":       "<span color='#DCD7BA'><b>{}</b></span>",
	                "weeks":      "",
	                "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
	                "today":      "<span color='#236b84'><b><u>{}</u></b></span>"
	            },
				"actions": {
					"on-click-right": "mode",
					"on-scroll-up": "shift_up",
					"on-scroll-down": "shift_down",
				},
	        },
		},
		"tray": {
			"icon-size": 13,
			"spacing": 5,
		},
		"custom/sep": {
			"format": "|",
			"tooltip": false,
		},
		 "mpris": {
 		"format": "ÔÄÅ  {status_icon} {dynamic}",
        "interval": 1,
        "dynamic-len": 40,
		"status-icons": {
		"playing": "‚ñ∂",
		"paused": "‚è∏",
		"stopped": "ÔÅç"
	},
		"dynamic-order": ["title", "artist"],
		"ignored-players": ["firefox"]
    },
	 "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
		"backlight": {
  			"device": "acpi_video0",
  			"format": "{icon} {percent}%",
  			"format-icons": [ "üîÖ", "üîÜ", "‚òÄÔ∏è" ],  // low, mid, high
  			"tooltip-format": "Brightness: {percent}%",
  			"on-click": "brightnessctl set +10%",
  			"on-click-right": "brightnessctl set 10%-"
		},

		"wireplumber": {
			"format": "{icon}   {volume}%",
			"format-muted": "ÔÄ¶",
			"tooltip-format": "Volume: {volume}%",
			"on-click": "pavucontrol",
			"format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
		},
		"network": {
			"format-wifi": "Ôá´",
			"tooltip-format-wifi": "{essid} ({signalStrength}%)",
			"format-ethernet": "Ôõø",
			"tooltip-format-ethernet": "",
			"format-disconnected": "Ó¨Å",
			"tooltip-format-disconnected": "disconnected",
	
			"on-click": "kitty nmtui"
		},
		"battery": {
			"interval": 60,
			"states": {
				"warning": 20,
				"critical": 10,
			},
			"format": "{icon}   {capacity}%",
			"format-charging": "ÔÉß  {capacity}%",
			"format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
			"format-time": "{H}h {M}min left",
			"tooltip-format": "{capacity}% {time}",
			"tooltip-format-charging": "ÔÉß  Charging: {capacity}%",
		},
		"group/power": {
		"orientation": "inherit",
		"drawer": {
			"transition-duration": 500,
			"children-class": "not-power",
			"transition-left-to-right": false,
		},
		"modules": [
			"custom/power", // First element is the "group leader" and won't ever be hidden
			"custom/lock",
			"custom/reboot",
		]
	},
	"custom/lock": {
		"format": " Û∞çÅ ",
		"tooltip": false,
		"on-click": "swaylock"
	},
	"custom/reboot": {
		"format": " Û∞úâ ",
		"tooltip": false,
		"on-click": "reboot"

	},
	"custom/power": {
		"format": " ÔÄë ",
		"tooltip": false,
		"on-click": "halt"
	}
}
	
